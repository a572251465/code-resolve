{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Jest Test",
      "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
      "preLaunchTask": "npm: pretest",
      "cwd": "${workspaceFolder}",
      "args": [
        "--i",
        "--config", "jest.config.js"
      ],
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
